<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="287.0" prefWidth="223.0" spacing="20" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.inventorysystem.controller.LoginController">
    <Label prefHeight="109.0" prefWidth="53.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Login" />

    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <HBox alignment="CENTER" spacing="20">
    <Button onAction="#handleLogin" text="Login" />
    <Button onAction="#handleCancel" text="Cancel" />
    </HBox>
</VBox>
