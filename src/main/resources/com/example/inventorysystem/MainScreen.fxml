<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="429.0" prefWidth="1024.0" spacing="20" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.inventorysystem.controller.MainScreenController">

    <Label prefHeight="30.0" prefWidth="857.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Inventory Management System" />

    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="searchField" promptText="Search for parts/products" />
        <Button onAction="#handleSearch" text="Search" />
    </HBox>

    <HBox spacing="20">
        <VBox spacing="10" style="-fx-border-radius: 15; -fx-border-color: black; -fx-border-width: 2; -fx-padding: 10; -fx-background-color: #f9f9f9;">
            <HBox alignment="TOP_RIGHT" spacing="10">
                <Label alignment="TOP_LEFT" prefHeight="25.0" prefWidth="241.0" style="-fx-font-size: 16px;" text="Parts" />
                <TextField promptText="Search Parts" /><Button text="Search" />
            </HBox>
            <TableView fx:id="partsTableView" prefHeight="195.0" prefWidth="510.0">
                <columns>
                    <TableColumn fx:id="partIDColumn" text="Part ID" />
                    <TableColumn fx:id="partNameColumn" prefWidth="88.0" text="Part Name" />
                    <TableColumn fx:id="inventoryLevelColumn" prefWidth="108.0" text="Inventory Level" />
                    <TableColumn fx:id="priceColumn" prefWidth="188.0" text="Price / Cost Per Unit" />
                </columns>
            </TableView>
            <HBox spacing="10">
                <Button text="Add" onAction="#handleAddPart" />
                <Button text="Modify" onAction="#handleModifyPart" />
                <Button text="Delete" onAction="#handleDeletePart" />
            </HBox>
        </VBox>

        <VBox spacing="10" style="-fx-border-radius: 15; -fx-border-color: black; -fx-border-width: 2; -fx-padding: 10; -fx-background-color: #f9f9f9;">
            <HBox alignment="TOP_RIGHT" spacing="10">
                <Label alignment="TOP_LEFT" prefHeight="25.0" prefWidth="270.0" style="-fx-font-size: 16px;" text="Products" />
                <TextField promptText="Search Parts" />
                <Button text="Search" onAction="#handleSearch"/>
            </HBox>

            <TableView fx:id="productsTableView" prefHeight="195.0" prefWidth="537.0" >
                <columns>
                    <TableColumn fx:id="productIDColumn" text="Product ID" />
                    <TableColumn fx:id="productNameColumn" prefWidth="105.0" text="Product Name" />
                    <TableColumn fx:id="productInventoryLevelColumn" prefWidth="107.0" text="Inventory Level" />
                    <TableColumn fx:id="productPriceColumn" prefWidth="199.0" text="Price / Cost Per Unit" />
                </columns>
            </TableView>

            <HBox spacing="10">
                <Button text="Add" onAction="#handleAddProduct" />
                <Button text="Modify" onAction="#handleModifyProduct" />
                <Button text="Delete" onAction="#handleDeleteProduct" />
            </HBox>

        </VBox>
    </HBox>

    <Button onAction="#handleExit" prefHeight="25.0" prefWidth="47.0" text="Exit" />

</VBox>
