<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12"
      fx:controller="com.example.inventorysystem.controller.ProductController"
      alignment="CENTER" spacing="15" prefWidth="600" prefHeight="700">

    <Label text="Add Product" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <TextField fx:id="idField" promptText="Product ID" editable="false" />
    <TextField fx:id="nameField" promptText="Product Name" />
    <TextField fx:id="inventoryField" promptText="Inventory" />
    <TextField fx:id="priceField" promptText="Price" />
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="maxField" promptText="Max" />
        <TextField fx:id="minField" promptText="Min" />
    </HBox>

    <Label text="Available Parts" />
    <TableView fx:id="partsTableView" prefHeight="150">
        <columns>
            <TableColumn fx:id="partIDColumn" text="Part ID" />
            <TableColumn fx:id="partNameColumn" text="Part Name" />
            <TableColumn fx:id="partInventoryLevelColumn" text="Inventory" />
            <TableColumn fx:id="partPriceColumn" text="Price" />
        </columns>
    </TableView>

    <Button text="Add" onAction="#handleAddPart" />

    <Label text="Associated Parts" />
    <TableView fx:id="associatedPartsTableView" prefHeight="150">
        <columns>
            <TableColumn fx:id="associatedPartIDColumn" text="Part ID" />
            <TableColumn fx:id="associatedPartNameColumn" text="Part Name" />
            <TableColumn fx:id="associatedPartInventoryLevelColumn" text="Inventory" />
            <TableColumn fx:id="associatedPartPriceColumn" text="Price" />
        </columns>
    </TableView>

    <Button text="Delete" onAction="#handleDeleteAssociatedPart" />

    <HBox spacing="20" alignment="CENTER">
        <Button text="Save" onAction="#handleSave" />
        <Button text="Cancel" onAction="#handleCancel" />
    </HBox>
</VBox>
